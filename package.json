{
    "name": "vscode-regexp-preivew",
    "displayName": "RegExp Preview and Editor",
    "description": "VSCode extension based on regexper-static",
    "version": "0.0.4",
    "publisher": "le0zh",
    "engines": {
        "vscode": "^1.32.0"
    },
    "galleryBanner": {
        "color": "#3B3738",
        "theme": "dark"
    },
    "icon": "docs/icon.png",
    "homepage": "https://github.com/le0zh/vscode-regexp-preivew/blob/master/README.md",
    "bugs": {
        "url": "https://github.com/le0zh/vscode-regexp-preivew/issues",
        "email": "newlight@qq.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/le0zh/vscode-regexp-preivew.git"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.showRegexper",
        "onCommand:extension.regexpEditor"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.showRegexper",
                "title": "RegExp Preview"
            },
            {
                "command": "extension.regexpEditor",
                "title": "RegExp Editor"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "extension.showRegexper",
                    "group": "1_modification"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.6",
        "@types/node": "^12.0.2",
        "mocha": "^6.1.4",
        "typescript": "^3.4.5",
        "vscode": "^1.1.32"
    }
}